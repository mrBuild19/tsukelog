<div class="container">
	<div class="row">
		<h1>おいしいつけ麺をつけログで共有しよう!</h1>
   </div>

 	<div class="row">
	 	<ul class="nav nav-pills nav-fill" role="tablist">
		  <li class="nav-item">
		    <a class="nav-link active" id="arrival-tab" data-toggle="tab" href="#arrival" role="tab" aria-controls="arrival" aria-selected="true">新着</a>
		  </li>
		  <li class="nav-item">
		    <a class="nav-link" id="popular-tab" data-toggle="tab" href="#popular" role="tab" aria-controls="popular" aria-selected="false">人気</a>
		  </li>
		</ul>
 	</div>

 	<div class="row">
		<div class="tab-content w-100">
		  <div class="tab-pane fade show active arrival-jscroll" id="arrival" role="tabpanel" aria-labelledby="arrival-tab">
		  	<div class="row">
		  		<% @posts.each do |post| %>
						<div class="col-4">
							<div class="card">
								<%= render "posts/post_header", post: post %>
								<%= render "posts/post_body", post: post %>
								<%= render "posts/post_footer", post: post %>
							</div>
						</div>
					<% end %>
		  	</div>
				<%= link_to_next_page @posts, '次のページ', class: "arrival-next" %>
			</div>

			<div class="tab-pane fade show popular-jscroll" id="popular" role="tabpanel" aria-labelledby="popular-tab">
				<div class="row">
		  		<% @popular.each do |post| %>
						<div class="col-4">
							<div class="card">
								<%= render "posts/post_header", post: post %>
								<%= render "posts/post_body", post: post %>
								<%= render "posts/post_footer", post: post %>
							</div>
						</div>
					<% end %>
		  	</div>
				<%= link_to_next_page @posts, '次のページ', class: "popular-next" %>
			</div>
			</div>
	</div>
</div>