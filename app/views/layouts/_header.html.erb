<header>
    <div class="navbar navbar-expand-md navbar-light">
        <div class="container">

            <%= link_to 'つけログ', root_path, class: "navbar-brand font-weight-bold" %>
            <%= link_to search_posts_path, class: "navbar-search-btn" do %><i class="fas fa-search"></i><% end %>
            <%= link_to users_path, class: "navbar-users nav-item nav-link active px-0 mr-1" do %>
      <i class="fas fa-user-friends" style="font-size: 1.1rem; position: relative; top: 1px; left: 3px;"></i><% end %>
            <% if user_signed_in? %>
                <ul class="navbar-nav">
                    <li> ようこそ、<%= current_user.name %> さん! </li>
                </div>
                <ul class="navbar-nav">
                    <nav-item>
                        <%= link_to '検索', search_posts_path, class: "nav-link" %>
                    </nav-item>
                    <nav-item>
                        <%= link_to 'ユーザー', users_path, class: "nav-link" %>
                    </nav-item>
                    <nav-item>
                        <%= link_to 'マイページ', user_path(current_user.id), class: "nav-link" %>
                    </nav-item>
                    <nav-item>
                        <%= link_to '投稿一覧', posts_path, class: "nav-link　p-auto" %>
                    </nav-item>
                    <nav-item>
                        <%= link_to '新規投稿', new_post_path, class: "nav-link" %>
                    </nav-item>
                </ul>
            <% else %>
                <ul class="navbar-nav">
                    <nav-item>
                        <%= link_to '新規登録', new_user_registration_path, class: "nav-link" %>
                    </nav-item>
                    <nav-item>
                    <%= link_to 'ログイン', new_user_session_path, class: "nav-link" %>
                    </nav-item>
                </ul>
            <% end %>
        </div>
    </div>
</header>