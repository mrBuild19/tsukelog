<div class="card-head d-flex mb-1 p-0 bg-white">
	<div class="post-title mr-auto ml-2"><%= link_to post.title, post_path(post), class: "text-dark font-weight-bold" %></div>
	<div class="post-tag">
		<% post.tag_list.each do |tag| %>
			<div class="badge badge-dark mr-1 p-2">
				<%= link_to tag, search_posts_path(tag_name: tag), class: "text-white" %>
			</div>
		<% end %>
	</div>
</div>