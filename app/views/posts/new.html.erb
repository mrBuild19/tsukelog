<div class="container">
	<div class="row">
		<%= form_with model: @post, local: true do |f| %>
			<%= render "shared/error_messages", model: f.object %>

			<div class="post-left">
				<div class="form-group">
					<label>
						<div class="form_main">
							<%= image_tag 'no_image.jpg', size: "150x150"  %>
		                </div>
		                <div class="form_sub">
		                    <%= f.attachment_field :post_images_images, multiple: true, class: 'form-control-file' %>
		                </div>
					</label>
				</div>
			</div>

			<div class="post-right">
				<div class="form-group">
					<%= f.label :title %>
					<%= f.text_field :title, class: 'form-control' %>
				</div>

				<div class="form-group">
					<%= f.label :tag_list %>
					<%= f.text_area :tag_list, value: @post.tag_list.join(','), class: 'form-control' %>
				</div>

				<div class="form-group">
					<%= f.label :text %>
					<%= f.text_area :text, class: 'form-control' %>
				</div>

				<div class="form-group">
					<%= f.hidden_field :rate, class: 'form-control' %>
					<div id="star-rate"></div>
				</div>
			</div>

			<%= f.submit nil, class: 'btn btn-primary' %>
		<% end %>
	</div>
</div>

<script>
$('#star-rate').raty({
	path: '/assets/',
	size: 50,
	half: true,
	scoreName: 'post[rate]'
})
</script>