<div class="card col-3 offset-1">
	<div class="card-img-top">
		<p><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "150x100" %></p>
	</div>
	<div class="card-body">
		<p><%= user.name %></p>

		<% if user_signed_in? && current_user.admin? %>
			<%= link_to '削除', user_path(user), method: :delete, class: 'btn btn-danger' %>
		<% else %>
			<div class="follow_<%= user.id %>"><%= render "users/follow_form", user: user %></div>
   		<% end %>
 	</div>
</div>