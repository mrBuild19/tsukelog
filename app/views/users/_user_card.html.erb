<div class="card col-3 offset-1 d-flex rounded-lg">
	<div class="card-img-top d-flex align-items-center justify-content-center">
		<%= link_to user_path(user) do %>
			<%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "150x150", class: "rounded-circle" %>
		<% end %>
	</div>
	<div class="card-body">
		<span class="d-flex align-items-center justify-content-center font-weight-bold" style="font-size: 20px;"><%= link_to user.name, user_path(user),class: "text-dark" %></span>

		<% if user_signed_in? && current_user.admin? %>
			<%= link_to '削除', user_path(user), method: :delete, class: 'btn btn-danger' %>
		<% else %>
			<div class="follow_<%= user.id %> mt-2">
				<%= render "users/follow_form", user: user %></div>
   		<% end %>
 	</div>
</div>